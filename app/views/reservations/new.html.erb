<div class="container d-flex justify-content-center">
  <div class="row d-flex justify-content-center p-4">
    <h1>Nueva Reserva:</h1><br>
    <div class="col-md-6 d-flex justify-content-center bg-white">
        <div class="card" style="max-width: 740px;">
          <div class="card-body">
            <div class="col-md-4">
              <% @place.photos.each do |photo| %>
                <%= cl_image_tag photo.key, height: 350, width: 500, crop: :pad %>
              <% end %>
            </div>
            <div class="col-md-4 d-flex flex-column">
              <div class="card-body">
              <h5 class="card-title"> <strong><%= @place.city %>, <%= @place.address %></strong></h5><br>
              <p class="card-text">Informaci√≥n del local por completar.</p>
              <p class="card-text">Precio: <%= number_to_currency(@place.price) %> </p>
              </div>
            </div>
          </div>
        </div>
    </div>
    <div class="col-md-4 border bg-white"><br>
      <%= simple_form_for [@place, @reservation] do |f| %>
        <%= f.input :date_start%>
        <%= f.input :date_finish %>
        <%= f.input :start_time %>
        <%= f.input :finish_time %>
        <%= f.submit "Crear Reserva", class: "btn btn-success" %>
          <div class= "btn btn-danger" class="col-4">
            <%= link_to "Cancelar Reserva", places_path %>
          </div>
      <% end %>
    </div>
  </div>
</div>
