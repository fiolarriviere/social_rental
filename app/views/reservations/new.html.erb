<div class="container">
  <div>
    <h1>Nueva Reserva</h1>
    <div>
      <%= simple_form_for [@place, @reservation] do |f| %>
        <%= f.input :date_start %>
        <%= f.input :date_finish %>
        <%= f.input :start_time %>
        <%= f.input :finish_time %>
        <%= f.submit "Crear Reserva", class: "btn btn-success" %>
        <div class= "btn btn-danger" class="col-4">
          <%= link_to "Cancelar Reserva", places_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
